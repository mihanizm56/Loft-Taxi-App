{
  "name": "loft-taxi-app",
  "description": "test pet project",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "mihanizm56",
    "email": "test@test.ru"
  },
  "main": "public/electron.js",
  "dependencies": {
    "@material-ui/core": "^3.9.3",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "electron-is-dev": "^1.1.0",
    "lodash": "^4.17.11",
    "mapbox-gl": "^0.54.0",
    "ramda": "^0.26.1",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-input-mask": "^2.0.4",
    "react-redux": "^6.0.1",
    "react-router-dom": "^5.0.0",
    "react-scripts": "^2.1.8",
    "react-text-mask": "^5.4.3",
    "redux": "^4.0.1",
    "redux-batched-actions": "^0.4.1",
    "redux-form": "^8.1.0",
    "redux-saga": "^1.0.2",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "cra-start": "rescripts start",
    "postinstall": "electron-builder install-app-deps",
    "start": "concurrently  \"npm run cra-start\" \"wait-on http://localhost:3000 && run-electron .\"",
    "build": "rescripts build",
    "test": "set CI=true&& npm run test:all",
    "test:coverage": "rescripts test --coverage",
    "precommit": "lint-staged",
    "flow": "flow",
    "test:all": "rescripts test --env=jsdom",
    "pack": "npm run build && npm run electron-pack",
    "stop": "taskkill /F /IM node.exe"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 opera versions",
      "last 2 edge versions"
    ],
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 11",
      "not op_mini all"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "0.0.11",
    "@rescripts/rescript-env": "0.0.10",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.0",
    "electron": "^6.0.5",
    "electron-builder": "19.16.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-notice": "^0.7.7",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "flow": "^0.2.3",
    "flow-bin": "^0.89.0",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "redux-mock-store": "^1.5.3",
    "wait-on": "^3.3.0"
  },
  "lint-staged": {
    "*.{js, jsx}": [
      "node_modules/.bin/eslint --max-warnings=3000",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "build": {
    "appId": "test_app_id",
    "productName": "My_First_Electron_App",
    "win": {
      "publisherName": "my Company",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "Electron_package"
    },
    "electronDownload": {
      "cache": "./cache"
    },
    "files": [
      "./build/**/*",
      "node_modules/**/*",
      "./public/electron.js"
    ],
    "extends": null,
    "nodeGypRebuild": "false",
    "npmRebuild": "false"
  },
  "rescripts": [
    "env"
  ],
  "eslintConfig": {
    "extends": "react-app"
  }
}
